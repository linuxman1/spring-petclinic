pipeline {
    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                  containers:
                  - name: maven
                    image: maven:3.8-openjdk-11
                    command:
                    - cat
                    tty: true
                  - name: docker
                    image: docker:dind
                    securityContext:
                      privileged: true
                    volumeMounts:
                    - name: dind-storage
                      mountPath: /var/lib/docker
                  - name: trivy
                    image: aquasec/trivy
                  volumes:
                  - name: dind-storage
                    emptyDir: {}
            '''
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/linuxman1/spring-petclinic.git'
            }
        }
        
        stage('Build with Maven Wrapper') {
            steps {
                container('maven') {
                    sh '''
                    cd spring-petclinic
                    chmod +x mvnw
                    ./mvnw package
                    '''
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                container('docker') {
                    sh '''
                    cd spring-petclinic
                    docker build -t spring-petclinic:${BUILD_NUMBER} .
                    '''
                }
            }
        }
        
        stage('Scan with Trivy') {
            steps {
                container('trivy') {
                    sh 'trivy image spring-petclinic:${BUILD_NUMBER}'
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}
