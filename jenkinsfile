pipeline {
    agent {
        kubernetes {
            yaml '''
                apiVersion: v1
                kind: Pod
                spec:
                  containers:
                  - name: maven
                    image: maven:3.8-openjdk-17
                    command:
                    - cat
                    tty: true
                  - name: trivy
                    image: aquasec/trivy
            '''
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/linuxman1/spring-petclinic.git'
            }
        }
        
        stage('Build with Maven Wrapper') {
            steps {
                container('maven') {
                    sh '''
                    chmod +x mvnw
                    ./mvnw package
                    '''
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                container('maven') {
                    sh './mvnw spring-boot:build-image -Dspring-boot.build-image.imageName=spring-petclinic:${BUILD_NUMBER}'
                }
            }
        }
        
        stage('Scan with Trivy') {
            steps {
                container('trivy') {
                    sh 'trivy image spring-petclinic:${BUILD_NUMBER}'
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Clean up workspace
                sh 'rm -rf ./*'
            }
        }
    }
}
